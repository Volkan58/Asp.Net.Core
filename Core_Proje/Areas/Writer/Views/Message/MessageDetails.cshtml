@model EntityLayer.Concrete.WriterMessage


@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Gelen Mesaj Detayları</h1><br />
<br />
<form class="form-group">
   
    @Html.HiddenFor(x => x.WriterID) 
    @Html.Label("Gönderen Adı")<br />
    @Html.TextBoxFor(x => x.SenderName, new { @class = "form-control" })
    @Html.Label("Gönderen Mail")
    @Html.TextBoxFor(x => x.Sender, new { @class = "form-control" })
    @Html.Label("Mesaj")
    @Html.TextBoxFor(x => x.MessageContent, new { @class = "form-control" })

</form>

