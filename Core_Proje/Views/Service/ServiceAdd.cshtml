@model EntityLayer.Concrete.Service

@{
    ViewData["Title"] = "ServiceAdd";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("ServiceAdd", "Service", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <p class="card-description">Hizmet Ekleme Paneli </p>
                <form class="forms-sample">
                    @Html.Label("Başlık")
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                    <br />
                    <label> Resim yolu</label>
                    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })

                    <button class="btn btn-info">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
}

